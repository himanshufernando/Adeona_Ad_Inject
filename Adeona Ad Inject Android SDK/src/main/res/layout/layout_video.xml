<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_banner_main"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:orientation="vertical"
    android:layout_width="wrap_content"
    app:layout_constraintEnd_toEndOf="parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <VideoView
            android:id="@+id/vid_adspace_banner"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            />

        <ProgressBar
            android:id="@+id/progressBar_banner_loading"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="visible"
            android:layout_centerInParent="true"

          />


        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/img_adspace_video_play"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerInParent="true"
            android:src="@drawable/ic_add_play" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/img_adspace_video_close"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:paddingTop="10dp"
            android:paddingRight="10dp"
            android:paddingLeft="20dp"
            android:paddingBottom="20dp"
            android:src="@drawable/ic_add_close" />




    </RelativeLayout>






</androidx.constraintlayout.widget.ConstraintLayout>